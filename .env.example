# ===========================================
# StorageBot Environment Configuration
# ===========================================
# Copy this file to .env and update the values

# Database
DATABASE_URL="postgresql://storagebot:storagebot_secret@postgres:5432/storagebot?schema=public"
POSTGRES_USER=storagebot
POSTGRES_PASSWORD=storagebot_secret
POSTGRES_DB=storagebot

# JWT Authentication
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRES_IN="7d"

# Backend Server
PORT=3001
NODE_ENV=development

# Frontend URL (for CORS - must match browser origin)
FRONTEND_URL="http://localhost:3000"

# Frontend Configuration
NEXT_PUBLIC_API_URL="http://localhost:3001"
